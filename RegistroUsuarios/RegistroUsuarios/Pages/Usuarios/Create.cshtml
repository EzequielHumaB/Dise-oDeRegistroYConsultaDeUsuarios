@page
@model RegistroUsuarios.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Registro de usuarios</h1>
</div>


<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categoria.Nombre" class="control-label"></label>
                <input asp-for="Categoria.Nombre" class="form-control" />
                <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.Descripcion" class="control-label"></label>
                <input asp-for="Categoria.Descripcion" class="form-control" />
                <span asp-validation-for="Categoria.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.FechaCreacion" class="control-label"></label>
                <input asp-for="Categoria.FechaCreacion" class="form-control" />
                <span asp-validation-for="Categoria.FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear usuario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
